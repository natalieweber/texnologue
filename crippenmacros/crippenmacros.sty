		{\ifthenelse{\equal{#1}{\gm{0}}\OR\equal{#1}{\gm{‚àÖ}}}%
			% Then say \gm{\nul}
			{\gm{\nul}}%
			% Else whatever was given.
			{#1}}}

%% Swap various horizontal dashes for the minus sign.
